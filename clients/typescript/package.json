{
  "name": "@artissist/logger",
  "version": "0.0.5",
  "type": "module",
  "description": "Unified logging library for Artissist with emoji support and distributed tracing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters": {
      "require": "./dist/adapters/index.js", 
      "import": "./dist/adapters/index.esm.js",
      "types": "./dist/adapters/index.d.ts"
    },
    "./context": {
      "require": "./dist/context.js",
      "import": "./dist/context.esm.js", 
      "types": "./dist/context.d.ts"
    },
    "./emoji": {
      "require": "./dist/emoji.js",
      "import": "./dist/emoji.esm.js",
      "types": "./dist/emoji.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:dev": "rollup -c --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dev": "npm run build:dev",
    "prepublishOnly": "npm run build && npm run test",
    "docs": "typedoc src/index.ts",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "keywords": [
    "logging",
    "logger",
    "observability", 
    "distributed-tracing",
    "emoji",
    "smithy",
    "artissist",
    "typescript"
  ],
  "author": "Artissist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/artissist/logger.git",
    "directory": "clients/typescript"
  },
  "bugs": {
    "url": "https://github.com/artissist/logger/issues"
  },
  "homepage": "https://github.com/artissist/logger#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "typescript-eslint": "^8.42.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.4.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.7.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "forceExit": true,
    "detectOpenHandles": true,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "publishConfig": {
    "access": "public"
  }
}